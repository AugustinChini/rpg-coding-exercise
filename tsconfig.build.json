{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "target": "es2016",
    "module": "commonJS",
    "strict": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "./build"
  },
  "exclude": ["node_modules", "build", "test"],

  "include": ["app/**/*.ts", "test/**/*.ts"]
}
